<% atdata={
  turbo: false,
  disable_with: false
} # Permite presentar errores de validaciÃ³n  %>
<% if defined?(datos_boton_envio) && datos_boton_envio %>
  <% atdata = atdata.merge(datos_boton_envio) %>
<% end %>
<div class="form-actions">
  <% if controller.registrar_en_bitacora %>
    <% regcorto = clase.demodulize.underscore %>
    <input 
     class='bitacora_cambio' 
     id='<%= regcorto %>_bitacora_cambio' 
     name='<%= regcorto %>[bitacora_cambio]' 
     type='hidden'>
  <% end %>
  <%= f.button :submit, 
    (f.object.new_record? ? t('Crear') : t('Actualizar')), 
    class: 'btn btn btn-primary',
    data: atdata %>
  <%= render partial: 'form_btncancelar' %>
</div>

