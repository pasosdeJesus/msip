{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["next-env.d.ts", "pages/**/*", "components/**/*", "lib/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}