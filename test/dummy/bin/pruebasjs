#!/bin/sh

RAILS="bin/rails"
if (test "$vm" = "3.2") then {
  RAILS="ruby --yjit bin/rails"
} fi;

RUTA_RELATIVA=/msip CONFIG_HOSTS=127.0.0.1 RAILS_ENV=test ${RAILS} s -b 127.0.0.1 -p 3000 &
numpid="$!"
echo "Proceso $numpid"

sleep 10 && yarn test
ret="$?"

echo "Matando proceso $numpid"
kill $numpid

return $ret
